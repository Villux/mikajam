canvas
  padding-top: 10px
  width: 100% !important
  max-width: 400px
  max-height: 400px
  height: auto !important
  opacity: 1
  border-radius: 10px


#menu li
	display: inline-block
	margin: 10px
	color: #000
	background: #fff
	background: rgba(255,255,255, 0.5)

#menu li
  -webkit-border-radius: 10px
  border-radius: 10px

#menu li.active
	background: #666
	background: rgba(0,0,0, 0.5)
	color: #fff

#menu li a
	text-decoration: none
	color: #000

#menu li.active a:hover
	color: #000

#menu li:hover
	background: rgba(255,255,255, 0.8)

#menu li a,
#menu li.active a
	padding: 9px 18px
	display:block

#menu li.active a
	color: #fff

#menu
	position: fixed
	top: 0
	left: 0
	height: 40px
	z-index: 70
	width: 100%
	padding: 0
	margin: 0


@media screen and (max-width: 600px)
  #video
    display: none
  #section1
    background-size: cover
    background-image: url("/images/testbg.jpg")
